db.movies.findOne(
  {languages: "English"}
);

db.movies.aggregate([
  {
    $match: {
      $and: [
        { "imdb.rating": { $gte: 7 } },
        { genres: { $nin: ["Crime", "Horror"] } },
        {rated: {$in: ["PG", "G"]}},
        {languages: {$all: ["English", "Spanish"]}}
      ]
    },
  },
  {
    $project: {
      _id: 0,
      "imdb.rating": 1,
      genres: 1,
    },
  }
]);